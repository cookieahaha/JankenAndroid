<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:googleads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" >

              <ProgressBar android:id="@+id/view_userHealthBar"
                  style="@android:style/Widget.ProgressBar.Horizontal"
                  android:layout_weight="8"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"/>

             <TextView android:id="@+id/userHealthText"
                 android:typeface="monospace"
                 android:textColor="#ffffff"
                 android:textStyle="bold"
                 android:layout_weight="2"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"/>
       </LinearLayout>

       <Space
           android:layout_width="fill_parent"
           android:layout_height="5dp" />

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" >

              <ProgressBar android:id="@+id/view_botHealthBar"
                  style="@android:style/Widget.ProgressBar.Horizontal"
                  android:layout_weight="8"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"/>

             <TextView android:id="@+id/botHealthText"
                 android:typeface="monospace"
                 android:textColor="#ffffff"
                 android:textStyle="bold"
                 android:layout_weight="2"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"/>
       </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView android:id="@+id/view_BOT"
            android:layout_weight="8"
            android:layout_height="fill_parent"
            android:layout_width="0dp"/>

    </LinearLayout>

    <TextView android:id="@+id/text"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton android:id="@+id/button_ROCK"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/hand_rock" />

        <ImageButton android:id="@+id/button_SCISSOR"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/hand_scissor" />

        <ImageButton android:id="@+id/button_PAPER"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/hand_paper" />
    </LinearLayout>
</LinearLayout>
